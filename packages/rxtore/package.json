{
  "name": "rxtore",
  "version": "0.0.2",
  "description": "Reactive state management based on RxJS for React.",
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly --declaration",
    "test": "jest"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/types/index.d.ts",
  "keywords": [
    "Reactive",
    "React",
    "Rx",
    "RxJS"
  ],
  "author": "nomyfan",
  "peerDependencies": {
    "react": "^17.0.0",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/jest": "^28.1.2",
    "@types/react": "^17.0.0",
    "babel-jest": "^28.1.1",
    "jest": "^27.5.1",
    "react": "^17.0.0",
    "rxjs": "^7.5.5",
    "tsup": "^6.1.2",
    "typescript": "^4.7.3"
  },
  "files": [
    "dist/*",
    "dist/types/*",
    "src",
    "LICENSE.txt",
    "package.json",
    "README.md",
    "tsconfig.json"
  ],
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "splitting": false,
    "sourcemap": false,
    "clean": true
  }
}
